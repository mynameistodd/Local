<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    card_view:cardCornerRadius="4dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.mynameistodd.local.fragments.SubscriptionDetailFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right"
            android:paddingRight="@dimen/feed_item_padding_left_right">

            <ImageView
                android:id="@+id/detail_business_logo"
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detail_business_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acme Bakery Stand"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/detail_business_snippet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="555 Everystreet Rd." />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/detail_business_map"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/teststaticmap" />

        <TextView
            android:id="@+id/detail_business_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Open Now!"
            android:layout_gravity="right" />

        <TextView
            android:id="@+id/detail_business_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Sunday: 9am -9pm\nMonday: 9am -9pm\nTuesday: 9am -9pm\nWednesday: 9am -9pm\nThursday: 9am -9pm\nFriday: 9am -9pm\nSaturday: 9am -9pm\n" />

        <Button
            android:id="@+id/detail_business_unsubscribe"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/holo_red_light"
            android:text="@string/unsubscribe" />
    </LinearLayout>
</android.support.v7.widget.CardView>